# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security Keys (Change these in production!)
SECRET_KEY=your-secret-key-change-in-production-2024
JWT_SECRET_KEY=jwt-secret-key-change-in-production-2024

# Database Configuration
DATABASE_URL=sqlite:///parking_app.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration (Configure for your email service)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@parkingapp.com

# Google Chat Webhook (Optional)
GOOGLE_CHAT_WEBHOOK_URL=

# Admin Default Credentials
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@parkingapp.com
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# CORS Configuration
CORS_ORIGINS=http://localhost:8080,http://localhost:3000
